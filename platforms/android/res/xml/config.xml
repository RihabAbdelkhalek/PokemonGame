<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>PokemonGame</name>
    <description>
        A sample game for children to enjoy discovering pokemon's voice.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Rihab Abdelkhalek
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="ldpi" src="www/res/icons/android/ldpi.png" />
    <splash density="land-xhdpi" src="www/res/Screen/android/drawable-land-xhdpi/xhdpi.png" />
    <splash density="land-hdpi" src="www/res/Screen/android/drawable-land-hdpi/hdpi.png" />
    <splash density="land-mdpi" src="www/res/Screen/android/drawable-land-mdpi/mdpi.png" />
    <splash density="land-ldpi" src="www/res/Screen/android/drawable-land-ldpi/ldpi.png" />
    <splash density="port-xhdpi" src="www/res/Screen/android/drawable-port-xhdpi/xhdpi.png" />
    <splash density="port-hdpi" src="www/res/Screen/android/drawable-port-hdpi/hdpi.png" />
    <splash density="port-mdpi" src="www/res/Screen/android/drawable-port-mdpi/mdpi.png" />
    <splash density="port-ldpi" src="www/res/Screen/android/drawable-port-ldpi/ldpi.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="Orientation" value="sensorLandscape" />
    <preference name="Fullscreen" value="true" />
</widget>
