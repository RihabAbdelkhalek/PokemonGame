<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PokemonGame</name>
    <description>
        A sample game for children to enjoy discovering pokemon's voice.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Rihab Abdelkhalek
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<platform name="android">
        <icon src ="www/res/icons/android/ldpi.png" density ="ldpi"/>
        <splash src ="www/res/Screen/android/drawable-land-xhdpi/xhdpi.png" density ="land-xhdpi"/>
        <splash src ="www/res/Screen/android/drawable-land-hdpi/hdpi.png" density ="land-hdpi"/>
        <splash src ="www/res/Screen/android/drawable-land-mdpi/mdpi.png" density ="land-mdpi"/>
        <splash src ="www/res/Screen/android/drawable-land-ldpi/ldpi.png" density ="land-ldpi"/> 
        <splash src ="www/res/Screen/android/drawable-port-xhdpi/xhdpi.png" density ="port-xhdpi"/>
        <splash src ="www/res/Screen/android/drawable-port-hdpi/hdpi.png" density ="port-hdpi"/>
        <splash src ="www/res/Screen/android/drawable-port-mdpi/mdpi.png" density ="port-mdpi"/>
        <splash src ="www/res/Screen/android/drawable-port-ldpi/ldpi.png" density ="port-ldpi"/>
    <preference name="Orientation" value="sensorLandscape" />
	<preference name="Fullscreen" value="true" />
    </platform>
   
    <preference name="SplashScreenDelay" value ="10000" />

</widget>

